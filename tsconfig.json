{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "./static/dist",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "lib": [
      "es5",
      "es6",
      "es2017",
      "es2019",
      "dom",
      "es2015.collection"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": []
}